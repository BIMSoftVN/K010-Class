<Window
    x:Class="TaskManage.Views.vSignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskManage.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="vSignIn"
    xmlns:mo="clr-namespace:TaskManage.Models"
    Width="600"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    xmlns:vm="clr-namespace:TaskManage.ViewModels"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:vmSignIn />
    </Window.DataContext>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>


        <Border CornerRadius="10,0,0,10">
            <Border.Background>
                <ImageBrush
                    AlignmentX="Left"
                    AlignmentY="Center"
                    ImageSource="/Images/bg4.jpg"
                    Opacity="1"
                    Stretch="UniformToFill" />
            </Border.Background>

            <Grid>
                <Border CornerRadius="10,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush Opacity="0.8" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="{StaticResource SecondaryColor}" />
                            <GradientStop Offset="1" Color="{StaticResource PrimaryColor}" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>



                <StackPanel Margin="30,50,30,50">
                    <Image
                        Width="100"
                        Height="100"
                        Source="/Images/logo.png" />

                    <TextBlock
                        FontSize="15"
                        Foreground="White"
                        Text="Chào mừng, bạn đến với" />

                    <TextBlock
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Task Manage">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                ShadowDepth="0"
                                Color="Orange" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock
                        FontSize="13"
                        Foreground="White"
                        Text="Task Manage là phần mềm quản lý công việc của công ty ..."
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

        </Border>

        <Border Grid.Column="1" CornerRadius="0,10,10,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/bg2.jpg" Stretch="UniformToFill" />
            </Border.Background>

            <Grid>
                <Button
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="CloseWin"
                    Content="x">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <md:PackIcon
                                Width="20"
                                Height="20"
                                Foreground="Red"
                                Kind="CloseBox" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Margin="20,70,20,50">
                    <Border
                        Width="80"
                        Height="80"
                        BorderBrush="LightGray"
                        BorderThickness="2"
                        CornerRadius="40">
                        <Border.Background>
                            <ImageBrush ImageSource="/Images/SolidWorks.png" Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>


                    <TextBlock Text="{Binding User.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <TextBlock Text="{Binding User.Age, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>

                    <TextBox
                        x:Name="K010_textbox"
                        Margin="0,10,0,0"
                        md:HintAssist.Hint="Tài khoản"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBox
                        Margin="0,10,0,0"
                        md:HintAssist.Hint="Mật khẩu"
                        Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBlock
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        Text="Quên mật khẩu?">
                        <TextBlock.Cursor>
                            <Cursor>Hand</Cursor>
                        </TextBlock.Cursor>
                    </TextBlock>

                    <Button
                        Width="120"
                        Margin="0,10"
                        Content="Đăng nhập"
                        Command="{Binding DangNhapCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="5"
                                    Background="#FF00985C"
                                    CornerRadius="5">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <md:PackIcon
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,5,0"
                                            Foreground="White"
                                            Kind="Login" />
                                        <TextBlock Foreground="White" Text="Đăng nhập" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

        </Border>

    </Grid>
</Window>
