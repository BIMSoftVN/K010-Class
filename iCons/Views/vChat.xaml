<Window x:Class="iCons.Views.vChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iCons.Views"
        mc:Ignorable="d"
        Topmost="True"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:vm="clr-namespace:iCons.ViewModels"
        WindowStartupLocation="CenterScreen"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        dx:ThemeManager.ThemeName="Win11Light"
        Title="vChat" SizeToContent="Height" Width="450">
    <Window.DataContext>
        <vm:vmChat />
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Height="450"
                  ItemsSource="{Binding ChatList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding ChatUser, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        
                    </GridViewColumn>

                    <GridViewColumn Width="370"
                                    DisplayMemberBinding="{Binding Message, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Margin="5"
                    Orientation="Horizontal">
            <dxe:TextEdit Width="320" Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                
            </dxe:TextEdit>

            <Button Content="Dịch Google" Margin="5,0,0,0"
                    Command="{Binding Send_Command}">
                
            </Button>
        </StackPanel>
    </Grid>
</Window>
