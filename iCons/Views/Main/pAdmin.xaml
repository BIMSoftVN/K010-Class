<Page
    x:Class="iCons.Views.Main.pAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:local="clr-namespace:iCons.Views.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:iCons.ViewModels.Main" xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    Title="Trang quản trị"
    d:DesignHeight="450"
    d:DesignWidth="800"
    dx:ThemeManager.ThemeName="Win11Light"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:vmAdmin />
    </Page.DataContext>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadAll}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem
                Command="{Binding LoadAll, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                FontSize="16"
                Header="Tải lại">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Green"
                        Kind="Refresh" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem FontSize="16" Header="Thêm User">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Green"
                        Kind="Add" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem FontSize="16" Header="Xóa User" Command="{Binding DeleteUser_Command}">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Red"
                        Kind="Minus" />
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <dxg:GridControl
            Grid.Row="1"
            ItemsSource="{Binding UserList}"
            SelectedItems="{Binding UserSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionMode="Row">
            <dxg:GridControl.View>
                <dxg:TableView
                    ShowCheckBoxSelectorColumn="True"
                    SearchPanelHorizontalAlignment="Stretch"
                    SearchPanelPosition="OverGroupPanel"
                    ShowGroupPanel="False"
                    ShowSearchPanelMode="Always" />
            </dxg:GridControl.View>

            <dxg:GridControl.Columns>
                <dxg:GridColumn
                    Width="45"
                    AllowEditing="False"
                    Header="Ảnh">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Border
                                Width="30"
                                Height="30"
                                Margin="5"
                                CornerRadius="15">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Row.Photo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
                                </Border.Background>
                            </Border>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <dxg:GridColumn
                    Width="120"
                    AllowEditing="True"
                    FieldName="UserName"
                    Header="UserName" />

                <dxg:GridColumn
                    Width="150"
                    AllowEditing="True"
                    FieldName="Email"
                    Header="Email" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</Page>
