<UserControl x:Class="ExcelWorkbook2.Views.ExcelPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelWorkbook2.Views"
             mc:Ignorable="d" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             dx:ThemeManager.ThemeName="Win11Light"
             xmlns:vm="clr-namespace:ExcelWorkbook2.ViewModels"
             d:DesignHeight="800" d:DesignWidth="400">
    <UserControl.DataContext>
        <vm:vmExcelPane/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Button Content="OK" Width="30" Command="{Binding ShowText_Cmd}"/>
        </StackPanel>   
    </Grid>
</UserControl>
